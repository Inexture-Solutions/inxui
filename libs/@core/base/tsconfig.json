{
  "include": [
    ".",
    "src/*.ts",
    "src/types/index.type.ts",
    "src/types/index.d.ts"
  ],
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom"
    ],
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "module": "ES2020",
    "moduleResolution":"Bundler",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
