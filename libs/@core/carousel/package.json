{
  "name": "@inexture/carousel",
  "version": "3.0.0",
  "sideEffects": [
    "./dist/styles.layer.css",
    "./dist/styles.css"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "export": "./src/index.js",
      "require": "./dist/index.js"
    },
    "./styles.layer.css": "./dist/styles.layer.css",
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsup && shx cp node_modules/@mantine/carousel/styles.layer.css dist/styles.layer.css && shx cp node_modules/@mantine/carousel/styles.css dist/styles.css",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .tsx,.jsx,.ts --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@inexture/base": "workspace:*",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "embla-carousel-react": "^8.3.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@mantine/carousel": "^7.14.0",
    "react": "^18.3.1",
    "shx": "^0.3.4"
  },
  "peerDependencies": {
    "@inexture/base": "*",
    "embla-carousel-react": "^8.3.0"
  }
}
